<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        tools:context=".fragments.CharacterDetailFragment">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/character_detail_image"
            android:layout_width="135dp"
            android:layout_height="180dp"
            android:layout_marginStart="@dimen/keyline_4"
            android:layout_marginTop="@dimen/keyline_4"
            android:elevation="4dp"
            android:scaleType="centerCrop"
            android:outlineProvider="bounds"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/person" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/character_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_4"
            android:layout_marginEnd="@dimen/keyline_4"
            android:layout_marginTop="@dimen/keyline_4"
            android:alpha="?alphaEmphasisHigh"
            android:text="Duchess of Rosedell"
            android:textAppearance="?textAppearanceHeadline5"
            app:layout_constraintStart_toEndOf="@+id/character_detail_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/character_detail_image" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/character_detail_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_4"
            android:layout_marginEnd="@dimen/keyline_4"
            android:layout_marginTop="@dimen/keyline_1"
            android:alpha="?alphaEmphasisHigh"
            android:text="Female presenting"
            android:textStyle="italic"
            android:textAppearance="?textAppearanceSubtitle1"
            app:layout_constraintStart_toEndOf="@+id/character_detail_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/character_detail_title" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/character_detail_description_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_4"
            android:layout_marginEnd="@dimen/keyline_4"
            android:layout_marginTop="@dimen/keyline_4"
            android:alpha="?alphaEmphasisHigh"
            android:text="Character Description"
            android:textAppearance="?textAppearanceHeadline5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/character_detail_image" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/character_detail_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_4"
            android:layout_marginEnd="@dimen/keyline_4"
            android:layout_marginTop="@dimen/keyline_2"
            android:alpha="?alphaEmphasisHigh"
            android:text="The Lady Rosedell is loved and admired by the nobility and peasantry alike. Her beauty and grace are unmatched in all the kingdom. Her wedding to the prince will be an auspicious occation."
            android:textAppearance="?textAppearanceBody1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/character_detail_description_title" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/character_detail_appearance_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_4"
            android:layout_marginEnd="@dimen/keyline_4"
            android:layout_marginTop="@dimen/keyline_4"
            android:alpha="?alphaEmphasisHigh"
            android:text="Appearance and Dress"
            android:textAppearance="?textAppearanceHeadline5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/character_detail_description" />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/character_detail_appearance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/keyline_4"
            android:layout_marginEnd="@dimen/keyline_4"
            android:layout_marginTop="@dimen/keyline_2"
            android:alpha="?alphaEmphasisHigh"
            android:text="Ms. Lockwood is an elegant noble wearing fine silks and jewlery. She ought to be the most well dressed person at the feast."
            android:textAppearance="?textAppearanceBody1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/character_detail_appearance_title" />

</androidx.constraintlayout.widget.ConstraintLayout>